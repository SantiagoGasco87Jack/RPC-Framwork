{
  "name": "twirpscript",
  "description": "Autogenerate Twirp Clients and Servers in TypeScript",
  "license": "MIT",
  "author": "Tate Thurston <tatethurston@gmail.com>",
  "repository": {
    "type": "git",
    "url": "https://github.com/tatethurston/twirpscript"
  },
  "version": "0.0.5",
  "main": "dist",
  "bin": {
    "twirpscript": "dist/cli/index.js"
  },
  "files": [
    "dist/**/*"
  ],
  "scripts": {
    "build": "yarn tsc && chmod +x dist/compiler.js dist/cli/index.js",
    "build:watch": "yarn tsc --watch",
    "lint:fix": "yarn prettier:fix && yarn lint:package:fix",
    "lint:package:fix": "prettier-package-json --write ./package.json",
    "prettier:fix": "prettier --write .",
    "version": "yarn run build && git add -A package.json",
    "postversion": "git push && git push --tags"
  },
  "types": "dist",
  "dependencies": {
    "google-protobuf": "^3.17.3",
    "prettier": "^2.0.5"
  },
  "devDependencies": {
    "@types/google-protobuf": "^3.15.3",
    "@types/node": "^16.4.8",
    "@types/prettier": "^2.3.2",
    "husky": "^4.2.5",
    "prettier-package-json": "^2.1.3",
    "typescript": "^4.3.5"
  },
  "keywords": [
    "browser",
    "protobuf",
    "rpc",
    "twirp",
    "typescript",
    "web"
  ],
  "husky": {
    "hooks": {
      "pre-commit": "yarn lint:fix --staged"
    }
  }
}
